#:kivy 2.0.0

<CustButton@Button>:
    font_size: 20
    size: 147, 60
    size_hint: None, None

<TextInput>:
    font_size: 28

<Sensitivity>:
    id: table
    rows: 10
    padding: 6
    spacing: 2

    BoxLayout:
        id: header
        CustButton:
            text: ""
        CustButton:
            text: "检出"
        CustButton:
            text: "未检出"
        CustButton:
            text: "总计"

    BoxLayout:
        id: pLine
        CustButton:
            text: "阳性"
        FloatInput:
            id: pos_y

        FloatInput:
            id: pos_n
        FloatInput:
            id: pos

    BoxLayout:
        id: nLine  
        CustButton:
            text: "阴性"
        FloatInput:
            id: neg_y
            text: "0"

        FloatInput:
            id: neg_n
            text: "0"
        FloatInput:
            id: neg
            text: "0"
            on_text: app.process()
    
    BoxLayout:
        CustButton:
            text: "总样本量"
        TextInput:
            id: sample_num
    BoxLayout:
        CustButton:
            text: "敏感性"
        TextInput:
            id: sens
    BoxLayout:
        CustButton:
            text: "假阳性率"
        TextInput:
            id: fpr
    BoxLayout:
        CustButton:
            text: "假阴性率"
        Button:
            id: fnr
            # text: str(float(root.ids.neg_n.text) / float(root.ids.neg.text))
    BoxLayout:
        CustButton:
            text: "特异性"
        TextInput:
            id: specification
    BoxLayout:
        CustButton:
            text: "PPV"
        TextInput:
            id: PPV
    BoxLayout:
        CustButton:
            text: "NPV"
        TextInput:
            id: NPV  